<%- include('includes/head'); %><%- include('includes/nav'); %>

        <main style="margin-top: 6em">
            <div class="container pt-4">
                <div class="container my-5 py-5">
                    <div class="row d-flex justify-content-center">
                        <div class="col-md-12 col-lg-10 col-xl-8 shadow-4-strong">
                            <div class="card ">
                                <div class="card-body">

                                    <h1 class="mt-3 mb-4 pb-2 text-center">Novo Chamado</h1>
                                    <p class="text-center lead">
                                        Descreva com detalhes para que fim você está abrindo Chamado
                                    </p>
                                    <hr>
                                    <div class="row">
                                        <form action="/sendchamado" method="post">

                                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                            <input type="hidden" name="email" value="<%= user.email %>">



                                            <div class="col-lg-12">
                                                <p class="mt-4">Deixe aqui sua mensagem.</p>

                                                <div data-mdb-input-init class="form-outline mb-4 border">
                                                    <textarea name="message" class="form-control active"
                                                        placeholder="Sua Mensagem" id="form4Example3"
                                                        rows="4"></textarea>
                                                </div>


                                                <div class="accordion" id="accordionExample">
                                                    <div class="accordion-item">
                                                        <h2 class="accordion-header" id="headingOne">
                                                            <button data-mdb-collapse-init class="accordion-button"
                                                                type="button" data-mdb-toggle="collapse"
                                                                data-mdb-target="#collapseOne" aria-expanded="true"
                                                                aria-controls="collapseOne">
                                                                Selecione para onde deseja enviar o chamado
                                                            </button>
                                                        </h2>
                                                        <div id="collapseOne" class="accordion-collapse collapse show"
                                                            aria-labelledby="headingOne"
                                                            data-mdb-parent="#accordionExample">
                                                            <div class="accordion-body">
                                                                <% sendbysetores.forEach(setores => { %>
                                                                    <div class="form-check form-check-inline">
                                                                      <input class="form-check-input" type="checkbox" name="gruposetor" id="inlineCheckbox1" value="<%= setores %>" />
                                                                      <label class="form-check-label" for="inlineCheckbox1"><%= setores %></label>
                                                                    </div>
                                                                  <% }); %>
                                                            </div>
                                                        </div>
                                                    </div>


                                                </div>


                                                <div class="float-end mt-2 pt-1">
                                                    <button type="submit" class="btn btn-primary ">
                                                        <i class="fas fa-paper-plane"></i> Enviar Chamado
                                                    </button>


                                                </div>
                                        </form>


                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>


        <%- include('includes/footer'); %>