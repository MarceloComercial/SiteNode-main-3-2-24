<%- include('includes/head'); %><%- include('includes/nav'); %>

        <main style="margin-top: 6em">
            <div class="container pt-4">
                <div class="container my-5 py-5">
                    <div class="row d-flex justify-content-center">
                        <div class="col-md-12 col-lg-10 col-xl-8 shadow-4-strong">
                            <div class="card ">
                                <div class="card-body">

                                    <h1 class="mt-3 mb-4 pb-2 text-center">Novo Chamado</h1>
                                    <p class="text-center lead">
                                        Descreva com detalhes para que fim você está abrindo Chamado
                                    </p>
                                    <hr>
                                    <div class="row">
                                        <form action="/sendchamado" method="post">
                                            
                                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                            <input type="hidden" name="email" value="<%= user.email %>">
                                            <input type="hidden" name="gruposetor" value="<%= user.setor %>">

                                            <div class="col-lg-12">
                                                <p class="mt-4">Deixe aqui sua mensagem.</p>


                                                <div data-mdb-input-init class="form-outline mb-4 border">
                                                    <textarea name="message" class="form-control active"
                                                        placeholder="Sua Mensagem" id="form4Example3"
                                                        rows="4"></textarea>
                                                </div>


                                                <div class="float-end mt-2 pt-1">
                                                    <button type="submit" class="btn btn-primary ">
                                                        <i class="fas fa-paper-plane"></i> Enviar Chamado
                                                    </button>


                                                </div>
                                        </form>


                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>


        <%- include('includes/footer'); %>